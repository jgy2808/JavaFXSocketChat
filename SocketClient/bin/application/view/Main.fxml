<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.view.MainController">
	<top>
		<HBox prefHeight="0.0" prefWidth="400.0" spacing="5.0"
			BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="userName" prefWidth="150.0"
					promptText="닉네임을 입력하세요" />
				<TextField fx:id="IPText" disable="true" text="127.0.0.1" />
				<TextField fx:id="portText" disable="true"
					editable="false" prefWidth="80.0" text="9000" />
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
	</top>
	<opaqueInsets>
		<Insets />
	</opaqueInsets>
	<center>
		<TextArea fx:id="textArea" prefHeight="167.0"
			prefWidth="400.0" BorderPane.alignment="CENTER" />
	</center>
	<bottom>
		<BorderPane prefHeight="0.0" prefWidth="400.0"
			BorderPane.alignment="CENTER">
			<left>
				<Button fx:id="connectionButton" mnemonicParsing="false"
					onAction="#connection" text="접속하기" BorderPane.alignment="CENTER" />
			</left>
			<right>
				<Button fx:id="sendButton" disable="true"
					mnemonicParsing="false" onAction="#sndBtnClick" text="보내기"
					BorderPane.alignment="CENTER" />
			</right>
			<center>
				<TextField fx:id="input" onAction="#textInput"
					BorderPane.alignment="CENTER" />
			</center>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" />
			</padding>
		</BorderPane>
	</bottom>
</BorderPane>
